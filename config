

server {
    listen 8080;
    listen 8080;
    server_name example.com;

    client_max_body_size 20M;
    error_page 404 /404.html;

 root /var/www/html ;     
    
    location / {
        allowed_methods POST;
        index index.html index.htm;
        autoindex on off;
          root /var/www/haha;
    }

    location /api/ {
        allowed_methods POST;
        autoindex on;
        root /var/www/html ;
        
    }

    location /test/ {
       allowed_methods POST;
        autoindex on;
       
          root /var/www/html ;
    }

    location /redirect-44me/ {
        return 301 "http://www.example.com/";
         
             

         
    }
}




server {
    listen 127.0.0.1:1555  ;
    server_name secure.example.com;

   
   

    root /var/www/secure;
    client_max_body_size 10M;


     
   
    location /api/ {
        allowed_methods POST;
        autoindex on;
        upload_store /var/www/uploads;
          root /var/www/example ;
    }



}


