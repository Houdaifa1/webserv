

server {
    listen 8080;
    listen 8080;
    server_name example.com;

    client_max_body_size 20M;
    error_page 404 /404.html;

 root /var/www/html ;     
    
    location / {
        allowed_methods POST;
        index index.html index.htm;
        autoindex on ;
          root /var/www/haha;
    }

    location /api/ {
        allowed_methods POST;
        autoindex on;
        root /home/nirou/va/ww/html ;
        
    }

    location /test/ {
       allowed_methods POST;
        autoindex on;
       
          root /var/www/html ;
    }

    location /redirect-44me/ {
        return 301 "http://www.example.com/";
         
             

         
    }
}




server {
    listen 127.0.0.1:1555  ;
    server_name secure.example.com;

   
   

    root /var/www/secure;
    client_max_body_size 10M;


     
   
    location /api/ {
        allowed_methods POST;
        autoindex on;
        upload_store /var/www/uploads;
          root /var/www/example ;
    }



}


server {
    listen 5555;
    root /var/www/html;

    location / {
        root /var/www/html;
        index index.html;
    }

    location /images {
        root /var/www/html/assets/images;
        autoindex on;
        index index.html;
    }

    location /images/icons {
        root /var/www/html/assets/icons;
        autoindex off;
        index icon-index.html;
    }

    location /docs {
        root /var/www/html/docs;
        autoindex on;
        index doc-index.html;
    }

    location /downloads {
        root /var/www/html/downloads;
        autoindex off;

        index download.html;
    }
 location /api/v1 {
        root /var/www/html/api;
        autoindex off;
        index api-index.html;
    }

    location /api/v1 {
        root /var/www/html/api/v1;
        autoindex off;
    }
    location /webserv {
        root /home/hdrahm/Desktop/webserv/////;
        autoindex off;
       
    }
        location /notregfile {
        root /dev;
        autoindex off;
        index api-index.html;
    }

    location /blog {
        root /var/www/html/blog;
        autoindex on;
        index blog-index.html;
    }
}
