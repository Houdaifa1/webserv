server {
    listen 127.0.0.1:1555  ;
    server_name secure.example.com;

   
   

    root /var/www/secure;
    client_max_body_size 10M;


     
   
    location /api/ {
        allowed_methods POST;
        autoindex on;
        upload_store /var/www/uploads;
          root /var/www/example ;
    }



}


server {
    listen 5555;
    root /var/www/html;

    error_page 403 /errors/403.html;
    error_page 404 /errors/404.html;
    error_page 405 /errors/405.html;
    error_page 500 /errors/500.html;
    
    location / {
        root /;
       allowed_methods GET;
        autoindex on;
    }

    location /images {
        root /var/www/html/assets/images;
        autoindex on;
        index index.html;
    }

    location /images/icons {
        root /var/www/html/assets/icons;
        autoindex off;
        index icon-index.html;
    }

    location /docs {
        root ///////var/www/html/docs;
        error_page 404 //////////////////////////404asdasdasdasdasdasdasdasdsadsa.html;
        autoindex off;
        index doc-index.html;
    }

    location /downloads {
        root /var/www/html/downloads;
        autoindex off;

        index download.html;
    }
 location /api/v1 {
        root /var/www/html/api;
        autoindex off;
        index api-index.html;
    }

    location /api/v1 {
        root /var/www/html/api/v1;
        autoindex off;
    }
    location /webserv {
        allowed_methods GET POST;
        root /home/hdrahm/Desktop/webserv/////;
        index index.html;
        autoindex on;
       
    }
        location /notregfile {
        root /dev;
        autoindex off;
        index api-index.html;
    }

    location /blog {
        root /var/www/html/blog;
        autoindex on;
        index blog-index.html;
    }
}


